extends ./templates/layout.pug

block vars
  - var title = 'Localização | Contato |'
  - var description = 'Este é o espaço institucional do escritório Paese, Ferreira & Advogados Associados. Aqui o usuário encontra informações básicas sobre nossas áreas de atuação, quem são os advogados de nossa equipe, quais as questões mais recorrentes de nossos clientes, links para instituições correlatas, artigos, publicações e notícias do mundo do trabalho.'

block content
  main#main-content.c-main-content
    .o-content-block
      .o-row
        // Coluna Menu
        .c-main-content__col.c-main-content__col--side.o-col
          h2.c-main-title.c-main-title--detail Contato
          ul.c-side-nav
            li.c-side-nav__item
              a(href="#").c-side-nav__link Fale Conosco
            li.c-side-nav__item
              a(href="#").c-side-nav__link Localização
            li.c-side-nav__item
              a(href="#").c-side-nav__link Trabalhe Conosco
            li.c-side-nav__item
              a(href="#").c-side-nav__link Atualização Cadastral

        // Coluna Conteúdo
        .c-main-content__col.c-main-content__col--main.o-col
          h1.c-main-title Localização
          p Rua dos Andradas, nº 1121, 6º e 11º andares, em frente à Praça da Alfândega, Centro Histórico - Porto Alegre - RS.
          hr
          .c-contact
            <iframe class="c-contact__map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2053.8949642983375!2d-51.23050128380077!3d-30.030378505839295!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9519790fb8466357%3A0xfd2604aa13e9e361!2sPaese+Ferreira+%26+Advogados+Associados!5e0!3m2!1spt-BR!2sbr!4v1497567570653" height="316" frameborder="0" style="border:0" allowfullscreen></iframe>
